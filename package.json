{
  "name": "@jsweb/jsdb",
  "version": "1.0.0",
  "description": "Simple NoSQL like embedded JSON database for modern Node.js applications.",
  "scripts": {
    "test": "echo 'Error: no test specified' && exit 1",
    "clean": "shx rm -rf dist",
    "major": "npm version major && npm run push",
    "minor": "npm version minor && npm run push",
    "patch": "npm version patch && npm run push",
    "prepare": "npm run dist",
    "push": "git push && git push --tags",
    "lint": "tsc --noEmit && tslint -p . -c tslint.json --fix",
    "dist": "run-s dist:*",
    "dist:lint": "npm run lint",
    "dist:clean": "npm run clean",
    "dist:build": "rollup -c",
    "dist:types": "tsc --removeComments --emitDeclarationOnly"
  },
  "keywords": [
    "js",
    "json",
    "javascript",
    "database",
    "nosql",
    "embedded"
  ],
  "author": "Alex Bruno CÃ¡ceres <git.alexbr@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^10.12.18",
    "@types/shelljs": "^0.8.1",
    "husky": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.1.0",
    "rollup-plugin-typescript": "^1.0.0",
    "shx": "^0.3.2",
    "tslib": "^1.9.3",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && git add ."
    }
  },
  "main": "dist/common.js",
  "esnext": "dist/module.js",
  "module": "dist/module.js",
  "types": "dist/module.d.ts",
  "dependencies": {
    "@jsweb/randkey": "^3.3.5",
    "shelljs": "^0.8.3"
  }
}
